function slash_fix, filename;, reverse=reverse

;switch from any system filename convention to the current one
;using path_setp

this= path_sep()
if this eq '/' then switcher = ['\', '/'] else switcher = ['/', '\']



;if n_elements(reverse) eq 0 then switcher = ['/', '\'] else switcher = ['\', '/']




a = strpos(filename, switcher[0])
out = filename

;either we're at the end so we return to prior level, or we keep swapping in

if a eq -1 then return, filename
  strput, out, switcher[1], a



;call iteratively to keep fixing


  out = slash_fix(out);, reverse=reverse)
return, out
end
